<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".confirm_achat">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:background="@drawable/gradient_blue">
        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_arrow_back_black_24dp"
            app:backgroundTint="#FFFFFF" />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:textColor="#FFFF"
            android:textStyle="normal"
            android:textSize="29dp"
            android:layout_marginLeft="16dp"
            android:text="Confirmer vos achats"
        />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_height="310dp"
        android:layout_width="360dp"
        android:layout_gravity="center"
        android:elevation="8dp"
        android:divider="@android:color/transparent"
        app:cardElevation="10dp"
        android:layout_marginTop="18dp"
        >
        <ImageView
            android:layout_width="250dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:src="@drawable/paypal" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:text="Veuillez entrer votre email paypal:"
        android:textColor="#000000" />
    <androidx.cardview.widget.CardView
        android:layout_height="50dp"
        android:layout_width="270dp"
        android:layout_gravity="center"
        android:elevation="10dp"
        android:divider="@android:color/transparent"
        app:cardElevation="15dp"
        android:layout_marginTop="40dp">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="Exemple: exepmle@email.com"
            android:shadowColor="#FFFFFF" />
        ></androidx.cardview.widget.CardView>

    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/confirmer"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_ronded"
        android:elevation="1sp"
        android:text="Confirmer"
        android:textColor="#ffffffff"
        android:textSize="20sp"
        app:backgroundTint="@color/Bleu" />

</LinearLayout>